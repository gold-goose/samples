<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <RootNamespace>WPF_WinRT_Core</RootNamespace>
    <UseWPF>true</UseWPF>
  </PropertyGroup>
  <ItemGroup>
    <ApplicationDefinition Include="..\WPF-WinRT-NetFx\App.xaml" Link="App.xaml" />
    <Compile Include="..\WPF-WinRT-NetFx\App.xaml.cs" Link="App.xaml.cs" />
  </ItemGroup>
  <ItemGroup>
    <Page Include="..\WPF-WinRT-NetFx\MainWindow.xaml" Link="MainWindow.xaml" />
    <Compile Include="..\WPF-WinRT-NetFx\MainWindow.xaml.cs" Link="MainWindow.xaml.cs" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="Windows">
      <HintPath>$(MSBuildProgramFiles32)\Windows Kits\10\UnionMetadata\10.0.16299.0\Windows.winmd</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.DotNet.UpgradeAssistant.Extensions.Default.Analyzers" Version="0.4.355802">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Windows.Compatibility" Version="7.0.0" />
  </ItemGroup>
</Project>